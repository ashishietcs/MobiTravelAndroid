<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.smartcity.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/bookticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Ticket" />

        <Button
            android:id="@+id/viewticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View History" />

        <Button
            android:id="@+id/talktous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Talk to US" />


        <LinearLayout
            android:id="@+id/adminLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <Button
                android:id="@+id/updateprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Profile" />

            <Button
                android:id="@+id/validateTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Validate Ticket" />

            <Button
                android:id="@+id/checkinTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checkin" />

            <Button
                android:id="@+id/checkoutTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checkout" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
